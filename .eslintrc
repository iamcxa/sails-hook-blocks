{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    ".eslintrc-sails",
    ".eslintrc-models"
  ],

  "plugins": [
    "import"
  ],

  "env": {
    "node": true
  },

  "parserOptions": {
    "ecmaVersion": 8
  },

  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "import/no-extraneous-dependencies": "off",
    "no-await-in-loop": "warn",
    "func-names": "off",
    "no-underscore-dangle": "off",
    "implicit-arrow-linebreak": "off"
  }
}
